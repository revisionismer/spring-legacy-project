<?xml version="1.0" encoding="UTF-8"?>
<web-app id="WebApp_ID" version="3.1" 
		xmlns="http://xmlns.jcp.org/xml/ns/javaee"
		xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">

	<!-- 1-1. 톰캣이 시작될때 spring이 같이 시작할 수 있게 리스너를 설정. -->
	<listener>
		<listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
	</listener>

	<!-- 1-2. 1-1이 실행될 때 root-context.xml을 같이 띄우라는 의미.  -->
	<context-param>
		<param-name>contextConfigLocation</param-name>
		<param-value>
			/WEB-INF/spring/root-context.xml
			/WEB-INF/spring/appServlet/aop-context.xml
			/WEB-INF/spring/appServlet/security-context.xml
		</param-value>
	</context-param>

	<!-- 1-3. appServlet라는 이름으로 DispatcherServlet을 정의 -->
	<servlet>
		<servlet-name>appServlet</servlet-name>
		<servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
		<!-- 1-4. DispatcherServlet가 처음에 구동될때 servlet-context.xml을 같이 띄우라는 의미.  -->
		<init-param>
			<param-name>contextConfigLocation</param-name>
			<param-value>/WEB-INF/spring/appServlet/servlet-context.xml</param-value>
		</init-param>
		
		<load-on-startup>1</load-on-startup>
		
		<!-- 1-7. 파일 업로드를 위한 설정(Servlet 3.1으로 업그레이드 해야 아래 어노테이션 사용가능, web.xml dtd도 맞게 변경해줘야함) -->
		<multipart-config>
			<!-- 1-8. 어디다가 보관 할 것인가 -->
			<location>C:\\upload\\nexchal</location>
		
			<!-- 1-9. 업로드 파일의 최대 크기 -> 최대크기 1MB * 20 -->
			<max-file-size>20971520</max-file-size>
			
			<!-- 1-10. 최대한 한 번에 보낼 수 있는 파일 크기  -> 최대 요청 크기 1MB * 40 -->
			<max-request-size>41943040</max-request-size>
			
			<!-- 1.11. 메모리 상에 얼마 만큼 보관하고 location으로 보낼 것인가  -> 1MB * 20 -->
			<file-size-threshold>20971520</file-size-threshold>
			
		</multipart-config>
	</servlet>
	
	<!-- 1-5. 위에서 설정한 appServlet을 / 경로로 들어오면 셋팅을 하겠다는 의미. -->
	<servlet-mapping>
		<servlet-name>appServlet</servlet-name>
		<url-pattern>/</url-pattern>
	</servlet-mapping>
	
	<!-- 1-6. JSP POST UTF-8 인코딩 -->
	<filter>
   		<filter-name>encodingFilter</filter-name>
   		<filter-class>org.springframework.web.filter.CharacterEncodingFilter</filter-class>
   		
   		<init-param>
   			<param-name>encoding</param-name>
   			<param-value>UTF-8</param-value>
   		</init-param>
   	</filter>
   
   	<filter-mapping>
   		<filter-name>encodingFilter</filter-name>
   		<url-pattern>/*</url-pattern><!--모든 요청에 대해서  -->
   	</filter-mapping>
   
   	<!-- 2-2. springSecurityFilterChain 등록 -->
	<filter>
    	<filter-name>springSecurityFilterChain</filter-name>
    	<filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
  	</filter>

	<filter-mapping>
    	<filter-name>springSecurityFilterChain</filter-name>
    	<url-pattern>/*</url-pattern>
  	</filter-mapping>
   
</web-app>